<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>xdcc-api:api>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>xdcc-api.log</file>
        <append>false</append>
        <encoder>
            <pattern>xdcc-api:api>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>access.log</file>
        <append>false</append>
        <encoder>
            <pattern>xdcc-api:api>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="fr.xdcc" additivity="false" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="xdcc.web" additivity="false" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
</configuration>